<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE makefile SYSTEM "makefile.dtd">
<makefile>
  <type>prog</type>
  <project_name>ogltras</project_name>
  <sources>
    <file>ogltras.c</file>
  </sources>
  <platforms>
    <platform name="win">
      <option name="NAME">ogltras.exe</option>
      <option name="ADD_LIBR">libogltras.lib ogm_auta.lib ogm_thr.lib ogm_gen.lib ogm_uni.lib ogm_msg.lib</option>
      <option name="ADD_LIBD">$(ADD_LIBR)</option>
      <option name="ADD_LIBP">$(ADD_LIBR)</option>
    </platform>
    <platform name="linux">
      <option name="NAME">ogltras</option>
      <option name="ADD_CFLAGS"></option>
      <option name="ADD_LIBS">-lglib-2.0 -logheap -logltras -logldi -logeql -logltrap -logpho -logstm -loglip -logrqp -logthr -liconv -loguni -loggen -logaut -logauta -logxml -logmsg -logauta</option>
    </platform>
  </platforms>
</makefile>
