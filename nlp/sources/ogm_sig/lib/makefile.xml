<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE makefile SYSTEM "makefile.dtd">
<makefile>
  <type>lib</type>
  <project_name>ogm_sig</project_name>
  <sources>
    <file>isig.c</file>
    <file>signa.c</file>
    <file>signal.c</file>
  </sources>
  <platforms>
    <platform name="win">
      <option name="NAME">ogm_sig</option>
      <option name="ADD_INC"/>
      <option name="ADD_LIBR">ogm_gen.lib</option>
      <option name="ADD_LIBD">$(ADD_LIBR)</option>
      <option name="ADD_LIBP">$(ADD_LIBR)</option>
    </platform>
    <platform name="linux">
      <option name="NAME">ogsig</option>
      <option name="ADD_CFLAGS"/>
      <option name="ADD_LIBR">-loggen</option>
      <option name="ADD_LIBD">$(ADD_LIBR)</option>
      <option name="ADD_LIBP">$(ADD_LIBR)</option>
    </platform>
  </platforms>
</makefile>
