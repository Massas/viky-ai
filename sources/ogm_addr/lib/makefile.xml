<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE makefile SYSTEM "makefile.dtd">
<makefile>
  <type>lib</type>
  <project_name>ogm_addr</project_name>
  <sources>
    <file>addradd.c</file>
    <file>addraso.c</file>
    <file>addrba.c</file>
    <file>addrloop.c</file>
    <file>iaddr.c</file>
  </sources>
  <platforms>
    <platform name="win">
      <option name="NAME">ogm_addr</option>
      <option name="ADD_INC"/>
      <option name="ADD_LIBR">ogm_ghbn.lib ogm_sock.lib ogm_thr.lib ogm_msg.lib ogm_gen.lib</option>
      <option name="ADD_LIBD">$(ADD_LIBR)</option>
      <option name="ADD_LIBP">$(ADD_LIBR)</option>
    </platform>
    <platform name="linux">
      <option name="NAME">ogaddr</option>
      <option name="ADD_CFLAGS"/>
      <option name="ADD_LIBR">-loggen -logghbn -logsock -logmsg -logthr</option>
      <option name="ADD_LIBD">$(ADD_LIBR)</option>
      <option name="ADD_LIBP">$(ADD_LIBR)</option>
    </platform>
  </platforms>
</makefile>
