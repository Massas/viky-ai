<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE makefile SYSTEM "makefile.dtd">
<makefile>
  <type>lib</type>
  <project_name>ogm_ltrac</project_name>
  <sources>
    <file>iltrac.c</file>
    <file>ltrac.c</file>
    <file>ltraca.c</file>
    <file>ltracdic.c</file>
    <file>ltracdica.c</file>
    <file>ltracdicb.c</file>
    <file>ltracdics.c</file>
    <file>ltracdicp.c</file>
  </sources>
  <platforms>
    <platform name="win">
      <option name="NAME">libogltrac</option>
      <option name="ADD_INC"/>
      <option name="ADD_LIBR">ogm_pho.lib ogm_aut.lib ogm_msg.lib ogm_uni.lib ogm_thr.lib ogm_gen.lib</option>
      <option name="ADD_LIBD">$(ADD_LIBR)</option>
      <option name="ADD_LIBP">$(ADD_LIBR)</option>
    </platform>
    <platform name="linux">
      <option name="NAME">ogltrac</option>
      <option name="ADD_CFLAGS"/>
      <option name="ADD_LIBR">-logaut -loggen -logmsg -logpho -loguni</option>
      <option name="ADD_LIBD">$(ADD_LIBR)</option>
      <option name="ADD_LIBP">$(ADD_LIBR)</option>
    </platform>
  </platforms>
</makefile>
