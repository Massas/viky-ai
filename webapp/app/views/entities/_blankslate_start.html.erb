<div id="blankslate-start" <% if !(entities_list.entities.empty?) %>style="display:none;"<% end %>>

  <div class="card">
    <div class="card-content">
      <div class="blankslate">
        <div class="blankslate__illustration">
          <img src='<%= image_path "robot-idle.png" %>'
               srcset='<%= image_path "robot-idle.png" %> 1x,
                       <%= image_path "robot-idle@2x.png" %> 2x' />
        </div>
        <div class="blankslate__content">
          <% if current_user.can? :edit, agent %>
            <%= t('views.entities.blankslate.start_html') %>
          <% else %>
            <%= t('views.entities.blankslate.no_entity_html') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
