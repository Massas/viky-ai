<li id="entity-<%= entity.id %>"
    data-id="<%= entity.id %>">
  <% link = can_edit ?
                edit_user_agent_entities_list_entity_path(owner, agent, entities_list, entity) :
                show_detailed_user_agent_entities_list_entity_path(owner, agent, entities_list, entity) %>
  <% if can_edit %>
    <div class="card-list__item__draggable"></div>
  <% end %>
  <a href="<%= link %>" data-remote="true" >
    <span class="card-list__item__name">
      <%= truncate(entity.terms_to_s.gsub("\n", ", "), length: 60) %>
    </span>
    <span class="card-list__item__stats"><%= t('views.entities.show.terms', count: entity.terms.count)%></span>
  </a>
</li>
