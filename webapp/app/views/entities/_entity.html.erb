<li id="entity-<%= entity.id %>"
    data-id="<%= entity.id %>">
  <% if can_edit && !paginate_is_enabled %>
    <div class="card-list__item__draggable"></div>
  <% end %>
  <% if can_edit %>
    <% link = edit_user_agent_entities_list_entity_path(
                owner, agent, entities_list, entity, search: params[:search]
              ) %>
  <% else %>
    <% link = show_detailed_user_agent_entities_list_entity_path(
                owner, agent, entities_list, entity
               ) %>
  <% end %>
  <a href="<%= link %>" data-remote="true" >
    <span class="card-list__item__name card-list__item__name--with-badges">
      <em><%= truncate(entity.terms_to_s.gsub("\n", ", "), length: 60) %></em>
      <% if entity.case_sensitive %>
        <span class="badge"><%= t('views.entities.show.case_sensitive') %></span>
      <% end %>
      <% if entity.accent_sensitive %>
        <span class="badge"><%= t('views.entities.show.accent_sensitive') %></span>
      <% end %>
    </span>
    <span class="card-list__item__stats">
      <%= t('views.entities.show.terms', count: entity.terms.count) %>
    </span>
  </a>
</li>
