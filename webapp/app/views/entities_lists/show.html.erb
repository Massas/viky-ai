<header class="tabs">
  <ul>
    <li>
      <%= link_to t('views.agents.show.sections.overview'), user_agent_path(@agent.owner, @agent) %>
    </li>
    <li>
      <%= link_to t('views.agents.show.sections.intents'), user_agent_intents_path(@agent.owner, @agent) %>
    </li>
    <li>
      <%= link_to t('views.agents.show.sections.entities_lists'), user_agent_entities_lists_path(@agent.owner, @agent), class: 'current' %>
    </li>
  </ul>
</header>

<div class="header">
  <div class="header__breadcrumb">
    <%= link_to t('views.agents.breadcrumb.base'), agents_path %> /
    <%= link_to @agent.name, user_agent_path(@agent.owner, @agent) %> /
    <%= link_to t('views.agents.breadcrumb.entities_lists'), user_agent_entities_lists_path(@agent.owner, @agent) %> /
    <strong>
      <%= @entities_list.listname %>
    </strong>
    <% if @entities_list.is_public? %>
      <span class="badge badge--success badge--small">
        <%= t('activerecord.attributes.entities_list.visibility_is_public').upcase %>
      </span>
    <% end %>
    <% if @entities_list.is_private? %>
      <span class="badge badge--warning badge--small">
        <%= t('activerecord.attributes.entities_list.visibility_is_private').upcase %>
      </span>
    <% end %>
    (<%= @entities_list.slug %>)
  </div>
</div>

<%= render 'entities/index' %>

<% content_for :right_aside do %>
  <%= render '/console/base' %>
<% end %>
