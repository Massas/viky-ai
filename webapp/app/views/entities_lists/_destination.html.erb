<li>
  <% if dst_agent.image.nil? %>
    <% css_class = "background-color-gradient__#{dst_agent.color}" %>
  <% else %>
    <% css_class = "agent-compact__id__visual--image" %>
    <% css_style = "background-image: url(#{dst_agent.image_url(:background)});" %>
  <% end %>
  <div class="agent-compact agent-compact--without-actions">
    <a href="<%= move_to_agent_user_agent_entities_list_path(@agent.owner, @agent, @entities_list, user: dst_agent.owner, agent: dst_agent) %>"
       class="agent-compact__id"
       data-remote="true"
       data-method="post"
       data-action="set-loading-modal"
       rel="nofollow">
      <div class="agent-compact__id__visual <%= css_class %>" style="<%= css_style %>">
        <% if dst_agent.is_public? %>
        <span class="agent-compact__id__visual__ribbon">
          <%= t('activerecord.attributes.agent.visibility_is_public') %>
        </span>
        <% end %>
      </div>
      <div class="agent-compact__id__data">
        <h5>
          <span><%= dst_agent.name %></span>
          <% if dst_agent.fans.exists?(current_user.id) %>
            <span class="icon icon--x-small icon--yellow">
              <%= icon_favorite %>
            </span>
          <% end %>
        </h5>
        <h6><%= dst_agent.slug %></h6>
      </div>
    </a>
  </div>
</li>
