<aside class="console-container">
  <div class="console">
    <div class="console__header">
      Console <small>- Test your agent live!</small>
      <div class="console__endpoint">
        <span class="badge badge--small badge--success">GET</span>
        <code>/api/v1/interpret.json</code>
      </div>
    </div>
    <form>
      <div class="field">
        <div class="control control--merged">
          <input type="text" placeholder="Say something..." name="sentence" />
          <button class="btn btn--primary">
            <span class="icon icon--small">
              <%= icon_check %>
            </span>
          </button>
        </div>
      </div>
    </form>
  </div>
</aside>
