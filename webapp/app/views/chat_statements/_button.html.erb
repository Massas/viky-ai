<div class="chatbot__statement chatbot__statement--<%= statement.speaker %>">
  <div class="chatbot__avatar">
    <% if statement.speaker == "user" %>
      <img src="<%= current_user.image_url(:square) %>">
    <% else %>
      <img src="<%= image_path('default_avatar.png') %>">
    <% end %>
  </div>
  <%= link_to statement.content['text'],
              "#",
              method: :post,
              remote: true,
              class:  "chatbot__widget chatbot__widget--button" %>
</div>
