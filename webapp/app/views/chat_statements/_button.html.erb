<div class="chatbot__statement chatbot__statement--<%= statement.speaker %>">
  <div class="chatbot__avatar">
    <% if statement.speaker == "user" %>
      <img src="<%= current_user.image_url(:square) %>">
    <% else %>
      <img src="<%= image_path('default_avatar.png') %>">
    <% end %>
  </div>
  <%= form_with url: user_action_chatbot_chat_statements_path(statement.chat_session.bot), remote: true do |f| %>
    <%= f.hidden_field :payload, value: statement.content['payload'] %>
    <%= f.button statement.content['text'],
                 class: "chatbot__widget chatbot__widget--button",
                 data:  {
                     disable_with: "<span class='icon icon--spin'>#{icon_loading}</span>".html_safe
                 } %>
  <% end %>
</div>
