<div class="card-animation-wrapper">
  <div class="card <% unless resource.errors.empty? %>card--shake<% end %>">
    <div class="card-content">

      <h2><%= t('views.passwords.new.title') %></h2>
      <h3 class="tagline"><%= t('views.passwords.new.tagline') %></h3>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email %>
          <%= display_errors(resource, :email) %>
        </div>

        <div class="actions">
          <%= f.button t('views.passwords.new.btn'), class: 'btn btn--full btn--large btn--primary',
              data: {
                disable_with: "<span class='icon icon--spin'>#{icon_loading}</span> #{t('loading')}".html_safe
              } %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
