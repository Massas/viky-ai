<div class="card <% unless resource.errors.empty? %>card--shake<% end %>">
  <div class="card-content">

    <h2>Forgot your password?</h2>
    <h3 class="tagline">No fear, here is how to define it again.</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
        <%= display_errors(resource, :email) %>
      </div>

      <div class="actions">
        <%= f.button "Send me reset password instructions", class: 'btn btn--full btn--large btn--primary',
            data: { disable_with: "<span class='icon icon--spin'>#{icon_loading}</span> Loading".html_safe } %>
      </div>
    <% end %>

  </div>
</div>

<%= render "devise/shared/links" %>
