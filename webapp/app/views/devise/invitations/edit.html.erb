<div class="card-animation-wrapper">
  <div class="card <% unless resource.errors.empty? %>card--shake<% end %>">
    <div class="card-content">

      <h2><%= t 'devise.invitations.edit.header' %></h2>
      <%= devise_error_messages_but([:password, :password_confirmation]) %>

      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :invitation_token %>

        <% if f.object.class.require_password_on_accepting %>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <span class="help">
                <span class="icon icon--x-small"><%= icon_information %></span>
                <%= t('views.auth.at_least_x_char', min: @minimum_password_length) %>
              </span>
            <% end %>
            <%= f.password_field :password, autocomplete: "off" %>
            <%= display_errors(resource, :password) %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <%= display_errors(resource, :password_confirmation) %>
          </div>
        <% end %>

        <p><%= f.submit t("devise.invitations.edit.submit_button") %></p>
      <% end %>

    </div>
  </div>
</div>
