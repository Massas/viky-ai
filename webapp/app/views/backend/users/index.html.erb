<header class="header">
  <div class="header__breadcrumb">
    <%= t('views.backend.breadcrumb.base') %> /
    <strong><%= t('views.backend.breadcrumb.user_management') %></strong>
  </div>
  <div class="header__search">
    <%= render "search" %>
  </div>
  <div class="header__tools">
    <a href="<%= new_user_invitation_path %>" class="btn btn--primary">
      <span class="icon icon--small"><%= icon_add_circle %></span> New invitation
    </a>
  </div>
</header>

<div class="card">
  <div class="card-content">
    <p>
      <%= page_entries_info @users %>
    </p>
    <% unless @users.count == 0 %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Status</th>
          <th>Last log in</th>
          <th class="number">Log in count</th>
          <th class="actions"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= user.email %>
              <% if user.admin? %>
                <span class="badge badge--primary"><%= t('views.backend.users.index.admin_badge') %></span>
              <% end %>
            </td>

            <td>
              <% if user.confirmed? %>
                <span class="badge badge--success">
                  <%= t('views.backend.users.index.status.confirmed') %>
                </span>
              <% else %>
                <span class="badge badge--warning">
                  <%= t('views.backend.users.index.status.not-confirmed') %>
                </span>
                <% unless user.confirmation_sent_at.nil? %>
                  <p>
                    <small>
                      <%= t('views.backend.users.index.last_confirmation') %>
                      <%= l(user.confirmation_sent_at, format: :short) %>.
                    </small>
                  </p>
                <% end %>
              <% end %>

              <% if user.locked_at? %>
                <span class="badge badge--danger">
                  <%= t('views.backend.users.index.status.locked') %>
                </span>
                <p>
                  <small>
                    <%= t('views.backend.users.index.locked_since') %>
                    <%= l(user.locked_at, format: :short) %>.
                  </small>
                </p>
              <% end %>

              <% unless user.invitation_status == :not_invited %>
                <% if user.invitation_status == :valid %>
                  <p>
                    <small title="<%= t('views.backend.users.index.invitation_send_on', date: l(user.created_at, format: :short)) %> <% unless user.invited_by.nil? %><%= t('views.backend.users.index.invited_by', email: user.invited_by.email) %><% end %>">
                      <%= t('views.backend.users.index.invitation_expires_in') %>
                      <%= distance_of_time_in_words(
                            user.invitation_sent_at, user.invitation_sent_at + User.invite_for,
                            scope: 'views.datetime.distance_in_words.short'
                          ) %>
                    </small>
                  </p>
                <% else %>
                  <% if user.invitation_status == :expired %>
                    <span class="badge badge--danger">
                      <%= t('views.backend.users.index.status.invitation-expired') %>
                    </span>
                  <% end %>
                <% end %>
              <% end %>
            </td>

            <td>
              <% if user.confirmed? %>
                <% unless user.current_sign_in_at.nil? %>
                  <%= l(user.current_sign_in_at, format: :short) %>
                <% end %>
              <% end %>
            </td>

            <td class="number">
              <% if user.confirmed? %>
                <%= user.sign_in_count %>
              <% end %>
            </td>
            <td class="actions">
              <% unless user.confirmed? %>
                <a href="<%= reinvite_backend_user_path(user) %>" class="btn btn--primary btn--small btn--outline">
                  <%= t('views.backend.users.index.reinvite.btn') %>
                </a>
              <% end %>
              <a href="<%= confirm_destroy_backend_user_path(user) %>" class="btn btn--small btn--outline btn--destructive" data-action="open-remote-modal">
                <%= t('views.backend.users.index.delete.btn') %>
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>

    <%= paginate @users %>

  </div>
</div>

