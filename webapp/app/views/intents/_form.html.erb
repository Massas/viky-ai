<%= form_with model: [current_user, @agent, @intent], data: { type: 'json' }, class: 'js-intent-form' do |f| %>
  <div class="field">
    <%= f.label :intentname %>
    <span class="badge badge--small badge--outline"><%= t('required') %></span>
    <div class="control">
      <%= f.text_field :intentname, id: :intent_intentname %>
    </div>
    <%= display_errors(@intent, :intentname) %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :visibility %>
      &nbsp;<span class="badge badge--small badge--outline"><%= t('required') %></span>
      <%= f.hidden_field :visibility %>
      <br />
      <div class="btn-group">
        <button class="btn <% if @intent.is_private? %>btn--primary<% end %>"
                data-input-selector="input[name='intent[visibility]']"
                data-input-value="is_private"><%= t('views.intents.visibility.is_private') %></button>
        <button class="btn <% if @intent.is_public? %>btn--primary<% end %>"
                data-input-selector="input[name='intent[visibility]']"
                data-input-value="is_public"><%= t('views.intents.visibility.is_public') %></button>
      </div>
      <%= display_errors(@intent, :visibility) %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description %>
    <div class="control">
      <%= f.text_area :description, id: :intent_description %>
    </div>
    <%= display_errors(@intent, :description) %>
  </div>

  <div class="actions">
    <% if ["edit", "update"].include? action_name %>
      <% btn_label = t('views.intents.edit.btn') %>
    <% else %>
      <% btn_label = t('views.intents.new.btn') %>
    <% end %>

    <%= f.button btn_label, class: "btn btn--primary",
                 data: {
                     disable_with: "<span class='icon icon--spin'>#{icon_loading}</span> #{t('loading')}".html_safe
                 }
    %>
    <a href="#" class="btn btn--plain" data-action='close-modal'><%= t('cancel') %></a>
  </div>
<% end %>

