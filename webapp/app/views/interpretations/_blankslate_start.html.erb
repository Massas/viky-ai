<div id="blankslate-start" <% if !(intent.interpretations_with_local(@current_locale).empty? && intent.locales.size == 1) %>style="display:none;"<% end %>>

  <div class="card">
    <div class="card-content">
      <div class="blankslate">
        <div class="blankslate__illustration">
          <img src='<%= image_path "robot-idle.png" %>'
               srcset='<%= image_path "robot-idle.png" %> 1x,
                       <%= image_path "robot-idle@2x.png" %> 2x' />
        </div>
        <div class="blankslate__content">
          <% if current_user.can? :edit, agent %>
            <%= t('views.interpretations.blankslate.start_html') %>
          <% else %>
            <% if current_locale == '*' %>
              <% language = t('views.interpretations.locales.no_locale') %>
            <% else %>
              <% language = current_locale %>
            <% end %>
            <%= t('views.interpretations.blankslate.no_expression_html', language: language) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
