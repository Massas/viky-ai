<div class="tabs">
  <ul>
    <% for locale in Interpretation::Locales %>
      <li>
        <a href="<%= user_agent_intent_path(@agent.owner, @agent, @intent, locale: locale) %>"
           <% if @locale == locale %>class="current"<% end %>>
          <%= locale %>
          <% count = @intent.interpretations_with_local(locale).count%>
          <span class="badge" data-count="<%= count %>" <% if @locale == locale %>id="current-locale-tab-badge"<% end %>>
            <%= count %>
          </span>
        </a>
      </li>
    <% end %>
  </ul>
</div>

<%= render partial: '/interpretations/form', locals: {
  agent: @agent,
  intent: @intent,
  interpretation: @interpretation,
  locale: @locale
} %>

<ul id="interpretations-list" class="interpretations-list">
  <%= render partial: '/interpretations/interpretation', collection: @intent.interpretations_with_local(@locale) %>
</ul>
