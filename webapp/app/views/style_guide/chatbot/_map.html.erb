<section>
  <h2>Map</h2>
  <h3>Only map</h3>
  <%= highlight_html do %>
<div class="chatbot">
  <div class="chatbot__discussion">
    <div class="chatbot__statement chatbot__statement--bot">
      <div class="chatbot__avatar">
        <div class="chatbot__avatar__image">
          <img src="<%= image_path('default_bot.png') %>">
        </div>
        <div class="chatbot__avatar__time">12:00</div>
      </div>
      <div class="chatbot__widget chatbot__widget--map">
        <div class="chatbot__widget--map__wrapper">
          <iframe
            width="600"
            height="450"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=***REMOVED***
              &q=Valence" allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </div>
</div>
  <% end %>

