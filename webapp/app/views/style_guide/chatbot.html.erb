    </div>
    <div class="chatbot__statement chatbot__statement--user">
      <div class="chatbot__avatar">
        <div class="chatbot__avatar__image">
          <img src="<%= image_path('default_avatar.png') %>">
        </div>
        <div class="chatbot__avatar__time">12:01</div>
      </div>
      Statement from User (on right)
    </div>
  </div>
</div>
  <% end %>
</section>

