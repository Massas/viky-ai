            <img src="<%= image_path('default_avatar.png') %>">
          </div>
          <div class="chatbot__widget chatbot__widget--text">
            I wondered why the frisbee was getting bigger. Then it hit me.
          </div>
        </div>
      </div>
      <div class="chatbot__statement chatbot__statement--bot">
        <div class="chatbot__statement__waiting">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 10">
            <path d="M4.784 7.608a2.392 2.392 0 0 1-4.784 0 2.392 2.392 0 1 1 4.784 0z" class="point-a"/>
            <path d="M12.392 7.608a2.392 2.392 0 0 1-4.784 0 2.392 2.392 0 1 1 4.784 0z" class="point-b"/>
            <path d="M20 7.608a2.392 2.392 0 0 1-4.784 0 2.392 2.392 0 1 1 4.784 0z" class="point-c"/>
          </svg>
        </div>
      </div>
    </div>
  <% end %>
</section>



