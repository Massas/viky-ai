    column-count: 3;
    column-gap: 1em;
  }
  .grid-card .chatbot .chatbot__discussion{
    height: 100%;
    margin: 0 0 1em 0
  }
</style>

<div class="sg-intro">
  <h1>Chatbot statements</h1>
</div>


<section>
  <h2>Statements</h2>
  <%= highlight_html do %>
<div class="chatbot">
  <div class="chatbot__discussion">
    <div class="chatbot__statement chatbot__statement--bot">
      Statement from Bot (on left)
    </div>
    <div class="chatbot__statement chatbot__statement--user">
      Statement from User (on right)
    </div>
  </div>
</div>
  <% end %>
</section>


<section>
  <h2>Avatar</h2>
  <%= highlight_html do %>
<div class="chatbot">
  <div class="chatbot__discussion">
    <div class="chatbot__statement chatbot__statement--bot">
      <div class="chatbot__avatar">
        <div class="chatbot__avatar__image">
          <img src="<%= image_path('default_bot.png') %>">
        </div>
        <div class="chatbot__avatar__time">12:00</div>
