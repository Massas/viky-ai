<section>
  <h2>Form</h2>
  <p>
     When combining several form elements, use the <code>field</code>
     class as a container, to keep the spacing consistent.
  </p>

  <h3>Basic form example</h3>
  <%= highlight_html do %>
<div class="field">
  <div class="control">
    <label for="username">Username</label> <span class="badge badge--small badge--outline">REQUIRED</span>
    <input type="text" placeholder="Text input placeholder" name="username" id="username" />
  </div>
</div>
<div class="field">
  <div class="control">
    <label for="password">Password</label> <span class="badge badge--small badge--outline">REQUIRED</span>
    <input type="password" name="password" id="password" />
    <div class="help">This is a help text</div>
  </div>
</div>
<div class="field">
  <div class="control">
    <input type="checkbox" id="rememberme">
    <label class="checkbox" for="rememberme">Remember me</label>
  </div>
</div>
<div class="field">
  <input type="submit" value="Log in" class="btn btn--primary" />
  <a href="#" class="btn btn--plain">Cancel</a>
</div>
  <% end %>


  <h3>Merged control</h3>
  <%= highlight_html do %>
<div class="field">
  <div class="control control--merged">
    <input type="text" placeholder="One input" name="username" />
    <button class="btn btn--primary">Validate</button>
  </div>
</div>
<div class="field">
  <div class="control control--merged">
    <input type="text" placeholder="First input" />
    <input type="text" placeholder="Second input" />
    <button class="btn btn--destructive">Remove</button>
  </div>
</div>
<div class="field">
  <div class="control control--merged">
    <input type="text" placeholder="One input" name="username" />
    <button class="btn">Add</button>
    <button class="btn">Remove</button>
  </div>
</div>
  <% end %>



  <h3>Inline form (left alignment)</h3>
  <%= highlight_html do %>
<div class="field field--inline">
  <div class="control">
    <label for="username">Username</label>
    <input type="text" placeholder="Text input placeholder" name="username" id="username" />
  </div>
  <div class="control">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" />
  </div>
  <div class="control">
    <input type="submit" value="Log in" class="btn btn--primary" />
  </div>
</div>
  <% end %>


