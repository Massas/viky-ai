<div class="sg-intro">
  <h1>Form</h1>
</div>

<section>
  <p>
     When combining several form elements, use the <code>field</code>
     class as a container, to keep the spacing consistent.
  </p>
  <h2>Basic form</h2>
  <%= highlight_html do %>
<div class="field">
  <div class="control">
    <label for="username">Username</label> <span class="badge badge--small badge--outline">REQUIRED</span>
    <input type="text" placeholder="Text input placeholder" name="username" id="username" />
  </div>
</div>
<div class="field">
  <div class="control">
    <label for="password">Password</label> <span class="badge badge--small badge--outline">REQUIRED</span>
    <input type="password" name="password" id="password" />
    <div class="help">This is a help text</div>
  </div>
</div>
<div class="field">
  <div class="control">
    <input type="checkbox" id="rememberme">
    <label class="checkbox" for="rememberme">Remember me</label>
  </div>
</div>
<div class="field">
  <input type="submit" value="Log in" class="btn btn--primary" />
  <button type="button" class="btn btn--plain">Cancel</button>
</div>
  <% end %>
</section>


<section>
  <h2>Help variants</h2>
  <%= highlight_html do %>
<div class="field">
  <label for="password-a">Password</label>
  <span class="help">
    <span class="icon icon--x-small"><%= icon_information %></span>
    Choose your password, at least 8 characters.
  </span>
  <input type="password" name="password" id="password-a" />
</div>
<div class="field">
  <label for="password-a">Password</label>
  <input type="password" name="password" id="password-a" />
  <div class="help">
    <span class="icon icon--x-small"><%= icon_information %></span>
    Choose your password, at least 8 characters.
  </div>
</div>
<div class="field">
  <label for="password-b">Password</label>
  <input type="password" name="password" id="password-b" />
  <div class="help help--success">
