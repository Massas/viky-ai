      </li>
      <% if current_user.admin %>
        <li>
          <a href="<%= backend_users_path %>" <% if controller_path.include?('backend') %>class="current"<% end %>>
            <%= t('views.nav.backend.users') %>
          </a>
        </li>
        <li>
          <a href="/style-guide/icon" data-turbolinks="false">
            <%= t('views.nav.backend.style_guide') %>
          </a>
        </li>
        <li>
          <a href="/backend/jobs/" data-turbolinks="false" target="_blank">
