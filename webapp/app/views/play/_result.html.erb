<% r = interpreter.agent_result %>
<% if r.present? %>
  <% if r.succeed? %>
    <h2>
      <%= t('views.play.result.title_html', count: r.interpretations_count) %>
      <a href="<%= user_agent_path(interpreter.agent.owner.username, interpreter.agent.agentname) %>"><%= interpreter.agent.name %></a>.
    </h2>
    <div class="card card--play-result">
      <%= play_highlight(interpreter).gsub("\n", "<br />").html_safe %>
    </div>
  <% else %>
    <div class="banner banner--alert">
      <div class="banner__content">
        <div>
          <img src='<%= asset_path("robot-confused.png") %>'
               srcset='<%= asset_path("robot-confused.png") %> 1x,
                   <%= asset_path("robot-confused@2x.png") %> 2x'
               style='width: 80px'/>
        </div>
        <div>
          <h3><%= t('views.play.error.title') %></h3>
          <p><%= t('views.play.error.status', status: r.status) %> <%= r.error_messages %>.</p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
